// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id               Int       @id @default(autoincrement())
  category         String
  type             QuestionType
  difficulty       Difficulty
  question         String
  correctAnswer    String
  incorrectAnswers String[]
  createdAt        DateTime  @default(now())
}

enum QuestionType {
  multiple
  boolean
}

enum Difficulty {
  easy
  medium
  hard
}

